<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th class="p-2 border-1 border-white">ID</th>
    <th class="p-2 border-1 border-white">Full Name</th>
    <th class="p-2 border-1 border-white">Age</th>
    <th class="p-2 border-1 border-white">Email</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td class="p-2 border-1 border-white"><%= user.id %></td>
      <td class="p-2 border-1 border-white">
        <%= user.name ? user.name : "name" + " "%>
        <%= user.surname ? user.surname : "surname" %>
      </td>
      <td class="p-2 border-1 border-white"><%= user.age ? user.age : 10 %></td>
      <td class="p-2 border-1 border-white"><%= user.email %></td>
      <td class="p-2"><%= link_to 'Show', user %></td>
      <td class="p-2"><%= link_to 'Edit', edit_user_path(user) %></td>
      <td class="p-2"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= paginate @users %>

<%= link_to "New user", new_user_path %>

<style>
    table {
        height: 200px;
    }

    .pagination {
        width: 400px;
    }

    .pagination span {
        padding: .4rem;
    }

</style>